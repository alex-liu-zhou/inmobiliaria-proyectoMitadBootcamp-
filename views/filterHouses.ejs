<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Real Estates</title>
    <link rel="stylesheet" href="/stylesheets/cards.css">
    <%- include("modules/estilos") %>
    
  </head>
  <body>
    <header><%- include("modules/navbar") %></header>
    <main class="fondoindex">
      <div class="container-xxl">
        <div class="row d-flex align-items-center justify-content-between">
          <div class="col-12 text-center py-5 text-white">
            <h1>Viviendas en venta</h1>
        </div>
        <% result.forEach((house)=>{ %>
          <div class="col-xxl-4 col-md-6 col-sm-12 pb-5 d-flex justify-content-center">
            <div class="custom-card ">
              <img
                src="/images/casas/<%= house.house_img %>"
                alt=""
                class="custom-card-img"
              />
              <div class="card-info d-flex flex-column">
                <span>Localidad: <%= house.city %></span>
                <span>Direccion: <%= house.address %></span>
              </div>
              <div class="custom-card-body d-flex flex-column">
                <p>Descripcion: <br /><%= house.description %></p>
                <span>Localidad: <%= house.city %></span>
                <span>Direccion: <%= house.address %></span>
                <span>Construido en: <%= house.built_year %></span>
                <div>
                  <button
                    class="boton-principal"
                    onclick="window.location.href=`/households/viewOneHouseHold/<%= house.households_id %>`"
                  >
                    Ver mas
                  </button>
                  <button
                  class="boton-principal"
                  onclick="window.location.href=`/households/editFormHouse/<%= house.households_id %>`"
                                >
                  Editar
                                </button>
                </div>
              </div>
            </div>
          </div>
          <% }) %>
      </div>
    </main>
    <%- include("modules/footer") %>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>